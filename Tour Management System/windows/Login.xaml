<Window x:Class="Tour_Management_System.windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Management_System.windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        
        Style="{StaticResource MaterialDesignWindow}"
        
        Title="Tour Manager"
        Height="700"
        Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border BorderThickness="8"
            BorderBrush="#008fb3"
            Background="#f2f2f2"
            CornerRadius="5">

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="30"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <!--Window-->
            <Grid Grid.Row="0"
                  Background="	#003d4d">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="3.5"/>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>

                </Grid.ColumnDefinitions>

                <!--"Login" Text-->
                <TextBlock Grid.Column="1"
                           Text="Login"
                           FontSize="12"
                           FontFamily="Consolas"
                           Foreground="White"
                           Padding="6"
                           VerticalAlignment="Center"/>

                <!--Close Button-->
                <Button Grid.Column="4"
                        x:Name="BttnClose"
                        Content="{materialDesign:PackIcon Kind=Close, Size=20}"
                        ToolTip="Close"
                        ToolTipService.HorizontalOffset="-20"
                        Cursor="Hand"
                        Focusable="False"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="0"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="0"
                        materialDesign:ElevationAssist.Elevation="Dp0"
                        Click="BttnClose_Click">

                    <Button.Style>

                        <Style TargetType="Button"
                               BasedOn="{StaticResource MaterialDesignRaisedButton}">

                            <Setter Property="Background" Value="#ff4d4d"/>

                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">

                                    <Setter Property="Background" Value="#ff1a1a"/>

                                </Trigger>

                            </Style.Triggers>

                        </Style>

                    </Button.Style>

                </Button>

                <!--Minimize Button-->
                <Button Grid.Column="3"
                        x:Name="BttnMinimize"
                        Content="{materialDesign:PackIcon Kind=Minus, Size=20}"
                        ToolTip="Minimize"
                        Cursor="Hand"
                        Focusable="False"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="0"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="0"
                        materialDesign:ElevationAssist.Elevation="Dp0"
                        Click="BttnMinimize_Click">

                    <Button.Style>

                        <Style TargetType="Button"
                               BasedOn="{StaticResource MaterialDesignRaisedButton}">

                            <Setter Property="Background" Value="#666666"/>

                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">

                                    <Setter Property="Background" Value="#4c4c4c"/>

                                </Trigger>

                            </Style.Triggers>

                        </Style>

                    </Button.Style>

                </Button>

            </Grid>

            <!--Elements-->
            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                
                <!--Left Column-->
                <Grid Grid.Column="0">

                    <!--Login-->
                    <Grid x:Name="GridLogin"/>
                    
                    <!--Pass Reset-->
                    <Grid x:Name="GridPassReset"/>

                    <!--Register-->
                    <Grid x:Name="GridRegister"/>

                </Grid>

                <!--Right Column-->
                <Grid Grid.Column="1">

                    <Grid.RowDefinitions>

                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>

                    <Image Grid.Row="0"
                           Source="/assets/images/map.jpg"
                           Stretch="UniformToFill"
                           VerticalAlignment="Center"/>

                    <Image Grid.Row="1"
                           Source="/assets/images/plane.jpg"
                           Stretch="UniformToFill"
                           VerticalAlignment="Center"/>

                    <Image Grid.Row="2"
                           Source="/assets/images/baloons.jpg"
                           Stretch="UniformToFill"
                           VerticalAlignment="Center"/>

                </Grid>

            </Grid>

        </Grid>
        
    </Border>
    
</Window>
