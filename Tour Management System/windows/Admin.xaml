<Window x:Class="Tour_Management_System.windows.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Management_System.windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        
        Title="Tour Manager" 
        Height="850"
        Width="1400"
        Background="#f2f2f2"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <!--Menu-->
        <Border Grid.Column="0"
                x:Name="BorderMenu"
                Width="300"
                BorderThickness="0"
                Background="#333333"
                CornerRadius="0,15,15,0">

            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <!--Users-->
                <Button Grid.Row="1"
                        Width="200"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="AccountGroup"
                                                 Width="21"
                                                 Height="21"
                                                 Foreground="#333333"
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="  |  Users"
                                   FontSize="17"
                                   Foreground="#333333"
                                   FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    </StackPanel>

                </Button>

                <!--credentials-->
                <Button Grid.Row="3"
                        Width="200"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="KeyChain"
                                                 Width="21"
                                                 Height="21"
                                                 Foreground="#333333"
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="  |  Credentials"
                                   FontSize="17"
                                   Foreground="#333333"
                                   FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    </StackPanel>

                </Button>

                <!--Permissions-->
                <Button Grid.Row="5"
                        Width="200"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="Security"
                                                 Width="21"
                                                 Height="21"
                                                 Foreground="#333333"
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="  |  Permissions"
                                   FontSize="17"
                                   Foreground="#333333"
                                   FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    </StackPanel>
                    
                </Button>

                <!--Database-->
                <Button Grid.Row="7"
                        Width="200"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="Database"
                                                 Width="21"
                                                 Height="21"
                                                 Foreground="#333333"
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="  |  Database"
                                   FontSize="17"
                                   Foreground="#333333"
                                   FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    </StackPanel>

                </Button>

                <!--Settings-->
                <Button Grid.Row="9"
                        Width="200"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="Cog"
                                                 Width="21"
                                                 Height="21"
                                                 Foreground="#333333"
                                                 VerticalAlignment="Center"/>

                        <TextBlock Text="  |  Settings"
                                   FontSize="17"
                                   Foreground="#333333"
                                   FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    </StackPanel>

                </Button>
                
                <!--User Info-->
                <Grid Grid.Row="11">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>

                    <!--Icon-->
                    <materialDesign:PackIcon Grid.Column="1"
                                             Kind="UserCircle"
                                             Width="70"
                                             Height="70"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Foreground="White"/>

                    <StackPanel Grid.Column="3"
                                Orientation="Vertical"
                                VerticalAlignment="Center">

                        <!--User Level-->
                        <TextBlock Text="Admin User"
                                   Foreground="White"
                                   FontSize="15"
                                   FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"/>

                        <!--Username-->
                        <TextBlock Text="@head.admin"
                                   Foreground="White"
                                   FontSize="15"
                                   FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"/>

                        <!--Name-->
                        <TextBlock Text="Chamath Dasun"
                                   Foreground="White"
                                   FontSize="17"
                                   FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"/>

                    </StackPanel>

                </Grid>
                
                <!--Window Control Buttons-->
                <Grid Grid.Row="13">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>

                    <!--Logout Button-->
                    <Button Grid.Column="1"
                            x:Name="BttnLogout"
                            Content="{materialDesign:PackIcon Kind=logout, Size=30}"
                            BorderThickness="0"
                            Width="60"
                            Height="60"
                            Foreground="White"
                            Background="Transparent"
                            ToolTip="Logout to login window"
                            Click="BttnLogout_Click"/>

                    <!--Close Button-->
                    <Button Grid.Column="2"
                            x:Name="BttnClose"
                            Content="{materialDesign:PackIcon Kind=power, Size=30}"
                            BorderThickness="0"
                            Width="60"
                            Height="60"
                            Foreground="White"
                            Background="Transparent"
                            ToolTip="Close the software"
                            Click="BttnClose_Click"/>

                    <!--Minimize Button-->
                    <Button Grid.Column="3"
                            x:Name="BttnMinimize"
                            Content="{materialDesign:PackIcon Kind=Minimize, Size=30}"
                            BorderThickness="0"
                            Width="60"
                            Height="60"
                            Foreground="White"
                            Background="Transparent"
                            ToolTip="Minimize the software"
                            Click="BttnMinimize_Click"/>

                </Grid>
                

            </Grid>

        </Border>

    </Grid>
    
</Window>
