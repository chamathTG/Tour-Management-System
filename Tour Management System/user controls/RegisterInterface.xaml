<UserControl x:Class="Tour_Management_System.user_controls.RegisterInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Management_System.user_controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             
             d:DesignHeight="670"
             d:DesignWidth="500"
             Background="#f2f2f2">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="35"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        
        <!--Company Name-->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">

                <TextBlock Text="Book"
                           FontSize="37"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text="Tour"
                           FontSize="37"
                           Foreground="#008fb3"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text=".Com"
                           FontSize="37"
                           Foreground="SkyBlue"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

            </StackPanel>

        </Grid>

        <!--Text-->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1"
                       Text="Register"
                       FontSize="15"
                       FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

        </Grid>

        <!--Name-->
        <TextBox Grid.Row="4"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Name"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Username-->
        <TextBox Grid.Row="5"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Username"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Email-->
        <TextBox Grid.Row="6"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="E-Mail"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Contact Number-->
        <TextBox Grid.Row="7"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Contact Number"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Password-->
        <Grid Grid.Row="8">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="46"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <PasswordBox Grid.Column="1"
                         FontFamily="Consolas"
                         Width="200"
                         Height="25"
                         Padding="3,0,0,0"
                         Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
                         materialDesign:HintAssist.Hint="Password"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:TextFieldAssist.ClearButtonSize="18"/>

        </Grid>

        <!--Password Rules-->
        <Grid Grid.Row="9">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>

                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                       Text="* Symbols cant be included."
                       FontSize="11"
                       FontFamily="Consolas"
                       VerticalAlignment="Bottom"/>

                <TextBlock Grid.Row="1"
                       Text="* Length should be five characters."
                       FontSize="11"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2"
                       Text="* Minimum one number should be included."
                       FontSize="11"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"/>

            </Grid>

        </Grid>
        
        <!--Register Button-->
        <Grid Grid.Row="10">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Width="300"
                    Height="40">

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Register  |  "
                               FontSize="15"
                               FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    <materialDesign:PackIcon Kind="AccountAdd"
                                             Width="18"
                                             Height="18"
                                             VerticalAlignment="Center"/>

                </StackPanel>

            </Button>

        </Grid>

    </Grid>
    
</UserControl>
