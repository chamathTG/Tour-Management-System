<UserControl x:Class="Tour_Management_System.user_controls.RegisterInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Management_System.user_controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             
             d:DesignHeight="670"
             d:DesignWidth="500"
             Background="#f2f2f2">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="auto "/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        
        <!--Company Name-->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">

                <TextBlock Text="Book"
                           FontSize="37"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text="Tour"
                           FontSize="37"
                           Foreground="#008fb3"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text=".Com"
                           FontSize="37"
                           Foreground="SkyBlue"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

            </StackPanel>

        </Grid>

        <!--Text-->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1"
                       Text="Register"
                       FontSize="15"
                       FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

        </Grid>

        <!--Name-->
        <TextBox Grid.Row="4"
                 FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                 Foreground="Black"
                 Width="400"
                 Height="35"
                 Padding="7,0,7,0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Name"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Username-->
        <TextBox Grid.Row="5"
                 FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                 Foreground="Black"
                 Width="400"
                 Height="35"
                 Padding="7,0,7,0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Username"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Email-->
        <TextBox Grid.Row="6"
                 FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                 Foreground="Black"
                 Width="400"
                 Height="35"
                 Padding="7,0,7,0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="E-Mail"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Contact Number-->
        <TextBox Grid.Row="7"
                 FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                 Foreground="Black"
                 Width="400"
                 Height="35"
                 Padding="7,0,7,0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Contact Number"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        <!--Password-->
        <Grid Grid.Row="8">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="46"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <PasswordBox Grid.Column="1"
                         x:Name="PbPassword"
                         FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                         Width="200"
                         Height="35"
                         Padding="7,0,7,0"
                         Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                         materialDesign:HintAssist.Hint="Password"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:TextFieldAssist.ClearButtonSize="18"
                         Mouse.GotMouseCapture="PbPassword_GotMouseCapture">

            </PasswordBox>

        </Grid>

        <!--Reset Pin-->
        <Grid Grid.Row="8"
              Grid.Column="3">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="46"/>

            </Grid.ColumnDefinitions>

            <PasswordBox Grid.Column="1"
                         FontFamily="pack://application:,,,/assets/fonts/#Alan Sans"
                         Width="190"
                         Height="35"
                         Padding="7,0,7,0"
                         ToolTip="The pin you enter here needs when you want to reset your password."
                         Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                         materialDesign:HintAssist.Hint="Reset Pin"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:TextFieldAssist.ClearButtonSize="18"/>

        </Grid>

        <!--Password Rules-->
        <Grid Grid.Row="10"
              x:Name="GridPassRules"
              Visibility="Collapsed">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>

                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="* Symbols cant be included."
                           FontSize="12"
                           Foreground="#a6a6a6"
                           FontFamily="pack://application:,,,/assets/fonts/#Host Grotesk"
                           VerticalAlignment="Bottom"/>

                <TextBlock Grid.Row="1"
                           Text="* Length should be five characters."
                           FontSize="12"
                           Foreground="#a6a6a6"
                           FontFamily="pack://application:,,,/assets/fonts/#Host Grotesk"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2"
                           Text="* At least one number should be included."
                           FontSize="12"
                           Foreground="#a6a6a6"
                           FontFamily="pack://application:,,,/assets/fonts/#Host Grotesk"
                           VerticalAlignment="Center"/>

            </Grid>

        </Grid>

        <!--Terms And Conditions-->
        <Grid Grid.Row="12">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="1"
                      x:Name="CbTermsCondition"
                      Content="Accept terms and conditions!"
                      FontFamily="pack://application:,,,/assets/fonts/#Host Grotesk"
                      Checked="CbTermsCondition_Checked"
                      Unchecked="CbTermsCondition_Unchecked"/>

        </Grid>
        
        <!--Register Button-->
        <Grid Grid.Row="14">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="BttnRegister"
                    Width="300"
                    Height="40"
                    IsEnabled="False"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    materialDesign:ElevationAssist.Elevation="Dp0">

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="Register  |  "
                               FontSize="15"
                               Foreground="#333333"
                               FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                    <materialDesign:PackIcon Kind="AccountAdd"
                                             Width="18"
                                             Height="18"
                                             Foreground="#333333"
                                             VerticalAlignment="Center"/>

                </StackPanel>

            </Button>

        </Grid>
        
        <!--Cancel Button-->
        <Grid Grid.Row="16">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Button x:Name="BttnCancel"
                    Grid.Column="1"
                    Foreground="White"
                    Background="#999999"
                    Width="150"
                    Height="40"
                    BorderThickness="0"
                    materialDesign:ElevationAssist.Elevation="Dp0"
                    Click="BttnCancel_Click">

                <StackPanel Orientation="Horizontal">

                    <materialDesign:PackIcon Kind="ArrowLeft"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center"/>

                    <TextBlock Text="  |  Cancel"
                               FontSize="15"
                               FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                </StackPanel>

            </Button>

        </Grid>

    </Grid>
    
</UserControl>
