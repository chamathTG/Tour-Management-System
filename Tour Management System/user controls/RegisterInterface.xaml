<UserControl x:Class="Tour_Management_System.user_controls.RegisterInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Management_System.user_controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             
             d:DesignHeight="670"
             d:DesignWidth="500"
             Background="#f2f2f2">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        
        <!--Company Name-->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="244"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">

                <TextBlock Text="Book"
                           FontSize="37"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text="Tour"
                           FontSize="37"
                           Foreground="#008fb3"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

                <TextBlock Text=".Com"
                           FontSize="37"
                           Foreground="SkyBlue"
                           FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

            </StackPanel>

        </Grid>

        <!--Text-->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="58"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1"
                       Text="Register"
                       FontSize="15"
                       FontFamily="pack://application:,,,/assets/fonts/#Fredoka SemiBold"/>

        </Grid>

        <!--Name-->
        <Grid Grid.Row="3">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Name"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        </Grid>

        <!--Username-->
        <Grid Grid.Row="4">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 VerticalAlignment="Center"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Username"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        </Grid>

        <!--Email-->
        <Grid Grid.Row="5">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 VerticalAlignment="Center"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="E-Mail"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        </Grid>

        <!--Contact Number-->
        <Grid Grid.Row="6">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1"
                 FontFamily="Consolas"
                 Foreground="Black"
                 Width="400"
                 Height="25"
                 Padding="3,0,0,0"
                 VerticalAlignment="Center"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 materialDesign:HintAssist.Hint="Contact Number"
                 materialDesign:HintAssist.Foreground="Black"
                 materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"/>

        </Grid>

        <!--Password-->
        <Grid Grid.Row="7">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="46"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>

            </Grid.ColumnDefinitions>

            <PasswordBox Grid.Column="1"
                         FontFamily="Consolas"
                         Width="198"
                         Height="25"
                         HorizontalAlignment="Left"
                         Padding="3,0,0,0"
                         Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
                         materialDesign:HintAssist.Hint="Password"
                         materialDesign:HintAssist.Foreground="Black"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         materialDesign:TextFieldAssist.ClearButtonSize="18"/>

        </Grid>

        <!--Password Rules-->
        <Grid Grid.Row="8">

            <Grid.RowDefinitions>

                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="15"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="* A symbol should be included."
                       FontSize="10"
                       FontFamily="Consolas"
                       VerticalAlignment="Bottom"
                       Margin="50,0,0,0"/>

            <TextBlock Grid.Row="1"
                       Text="* A number should be included."
                       FontSize="10"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"
                       Margin="50,0,0,0"/>

            <TextBlock Grid.Row="2"
                       Text="* Length should be five characters."
                       FontSize="10"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"
                       Margin="50,0,0,0"/>

        </Grid>

    </Grid>
    
</UserControl>
